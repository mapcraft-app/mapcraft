	},
  "repository": {
    "type": "git",
    "url": "https://github.com/mapcraft-app/mapcraft.git"
  },
  "builder": {
    "arch": [
      "x64"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/mapcraft-api/node_modules/{7zip-bin}/**/*"
    ]
  },
	"scripts": {
    "dev": "vite ./src",
    "lint": "eslint .",
    "postinstall": "electron-builder install-app-deps",
		"build": "vite build ./src",
    "preview": "yarn build && electron-builder --dir --config build.cjs",
    "production:mac": "yarn build && electron-builder -m --config build.cjs",
    "production:windows": "yarn build && electron-builder -w --config build.cjs",
    "production:linux": "yarn build && electron-builder -l --config build.cjs"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.6.0",
    "@types/markdown-it": "^13.0.7",
