    "electron": "^28.2.9", 
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "sass": "^1.33.0",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.4.0",
    "vite": "^5.2.2",
    "vite-tsconfig-paths": "^4.3.2",
    "vue-router": "^4.3.0",
    "vue-tsc": "^2.0.7"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.9",
