{
  "private": true,
  "name": "mapcraft",
  "productName": "Mapcraft",
  "description": "Mapcraft is a software that increases the possibilities of mapmakers without any complex installation",
  "homepage": "https://mapcraft.app",
  "license": "GPL-3.0",
  "version": "1.0.0-beta",
  "main": "main.js",
  "author": {
    "name": "Cl√©ment Bertrand",
    "email": "hello@mapcraft.app"
  },
  "keywords": [
    "mapcraft",
    "minecraft"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mapcraft-app/mapcraft.git"
  },
  "builder": {
    "arch": [
      "x64"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/mapcraft-api/node_modules/{7zip-bin,7zip-min}/**/*"
    ]
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint --fix .",
    "buildDeps": "electron-builder install-app-deps",
    "build": "yarn buildDeps && vite build && vite build -c vite.config.electron.ts",
    "preview": "yarn build && electron-builder --dir --config build.js",
    "productionMac": "yarn build && electron-builder -m --config build.js",
    "productionWin": "yarn build && electron-builder -w --config build.js",
    "productionLix": "yarn build && electron-builder -l --config build.js"
  },
  "dependencies": {
    "@quasar/extras": "^1.15.9",
    "@types/markdown-it": "^12.2.3",
    "better-sqlite3": "^8.4.0",
    "bezier-easing": "^2.1.0",
    "bezier-js": "^6.1.3",
    "mapcraft-api": "../api",
    "markdown-it": "^13.0.1",
    "pinia": "^2.1.3",
    "quasar": "^2.12.0",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.3.0",
    "@types/better-sqlite3": "^7.6.2",
    "@types/bezier-js": "^4.1.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-vue": "4.0.0",
    "electron": "^25.0.1",
    "electron-builder": "^24.4.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.5.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "sass": "1.32.12",
    "typescript": "^4.9.4",
    "vite": "4.3.9",
    "vite-tsconfig-paths": "3.6.0",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.6.5"
  }
}
